extends ../layout
block content
    article
      if topic
        h2= topic.title
        = topic.description
        div= 'by '+topic.author
      else
        h2 Hello
        | This is Server Side JavaScript Programming Language.
    li
      a(href='/topic/add') add
    if topic  
      - rid = encodeURIComponent(topic['@rid'])
      li  
        a(href='/topic/'+rid+'/edit') edit
      li  
        a(href='/topic/'+rid+'/delete') delete
